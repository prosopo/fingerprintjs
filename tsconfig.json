{
	"extends": "../../tsconfig.esm.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": false,
		"noFallthroughCasesInSwitch": false,
		"strict": false,
		"isolatedModules": false
	},
	"include": [
		"src",
		"src/**/*.json",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"tests/**/*",
		"vitest.setup.ts",
		"vitest.config.ts"
	],
	"references": [
		{
			"path": "../../dev/config/tsconfig.json"
		}
	]
}
